{
  "compilerOptions": {
    "target": "ES2017", // ✅ Turun ke ES2017 untuk better decorator support
    "moduleResolution": "Bundler",
    "experimentalDecorators": true, // ✅ Sudah ada
    "emitDecoratorMetadata": true, // ✅ Sudah ada
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // ✅ Ubah dari "react-jsx" ke "preserve" untuk Next.js
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@shared/*": [
        "./src/shared/*"
      ],
      "@employees/*": [
        "./src/modules/employees/*"
      ],
      "@auth/*": [
        "./src/modules/auth/*"
      ],
      "@dashboard/*": [
        "./src/modules/dashboard/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
